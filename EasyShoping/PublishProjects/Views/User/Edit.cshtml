@model EasyShoping.Model.UserModel
@{
    ViewBag.Title = "Edit User ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section pageName {
      <li class="active">@ViewBag.Title</li>
}
@using (@Html.BeginForm("Edit", "User", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal validate" }))
{
    
<div class="block">
    @Html.ValidationSummary(false)
                <h6 class="heading-hr"><i class="icon-user-plus3"></i>@Model.UserName</h6>
                <div class="block-inner">
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-6">
                        <label>User Name</label>
                      @Html.HiddenFor(m=>m.ID)
                        @Html.TextBoxFor(m=>m.UserName, new { @class= "required form-control"})
                          @Html.ValidationMessageFor(m => m.UserName)
                      </div>
                      <div class="col-md-6">
                        <label>Password</label>
                        @Html.PasswordFor(m=>m.Password, new { @class= "form-control",value = Model.Password})
                      </div>
                    </div>
                  </div>
                  
                </div>
               
                <div class="text-right">
                    @Html.LabelFor(m => m.IsActive) 
                     @Html.CheckBoxFor(m => m.IsActive, new { @class= "styled"})
                  <input type="reset" value="Cancel" onclick="goBack();" class="btn btn-default">
                  <input type="submit" value="Save" class="btn btn-primary">
                </div>
              </div>
}
